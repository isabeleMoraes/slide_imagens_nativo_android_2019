<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_propaganda">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_propaganda"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txt_nome_propaganda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/image_view_propaganda"
                android:text="Nome de exemplo para mostrar aqui"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_duracao_propaganda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="155"
                android:textSize="18sp"
                android:layout_below="@id/txt_nome_propaganda"
                android:layout_toRightOf="@id/image_view_propaganda"/>

            <TextView
                android:id="@+id/txt_segundos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Segundos"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/txt_duracao_propaganda"
                android:layout_below="@id/txt_nome_propaganda"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>